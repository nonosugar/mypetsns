<!DOCTYPE html>
<html>
<head>
  <title>Mypetsns</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<div class="apporange">
    <%= image_tag '/images/logo.png',class:'applogo'%>

	
	<header>

		<ul>
		  <% unless user_signed_in? %>
			<li><%= link_to '新規登録',new_user_registration_path,class:'backclear' %></li>
			<li><%= link_to 'ログイン',new_user_session_path,class:'backclear' %></li>
			<li><%= link_to 'facebook',user_omniauth_authorize_path(:facebook)%></li>
			<li><%= link_to 'twitter',user_omniauth_authorize_path(:twitter)%></li>
          <% else %>
			<li><%= link_to 'ログアウト',destroy_user_session_path ,method: :delete ,class:'backclear'%></li>
			<li><%= link_to '新規投稿',new_note_path ,class:'backclear'%></li>
			<li><%= link_to 'マイページ',usershow_path(current_user.id),class:'backclear' %></li>
			<li><%= link_to 'Q&A',questions_path %></li>
		  <% end %>
			
		</ul>
	</header>
	

	<div class="appcontent">
		<%= yield %>
	</div>
</div>


</body>
</html>
