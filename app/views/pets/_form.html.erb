<%= form_for(@pet) do |f| %>
  
  <div class="field form-group">
    <%= f.label :名前 %><br>
    <%= f.text_field :name,class:'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :ペットの特徴 %><br>
    <%= f.text_field :pettype ,class:'form-control'%>
  </div>
  <div class="field form-group">
    <%= f.label :一言 %><br>
    <%= f.text_area :phrase,class:'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :年齢 %><br>
    <%= f.number_field :age,class:'form-control' %>
  </div>

  <%= f.label :image %>
　　<%= f.file_field :image %>
  
  <div class="actions">
    <%= f.submit class:'btn btn-success' %>
  </div>
<% end %>