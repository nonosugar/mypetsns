<%= form_for(@pet) do |f| %>
  

  <div class="field">
    <%= f.label :pettype %><br>
    <%= f.text_field :pettype %>
  </div>
  <div class="field form">
    <%= f.label :phrase %><br>
    <%= f.text_area :phrase %>
  </div>
  <div class="field">
    <%= f.label :age %><br>
    <%= f.number_field :age %>
  </div>
  <div class="field form">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions form">
    <%= f.submit %>
  </div>
<% end %>