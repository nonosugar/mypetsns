<%= form_for(@pet) do |f| %>
  

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field form">
    <%= f.label :phrase %><br>
    <%= f.text_area :phrase %>
  </div>
  <div class="field form">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="actions form">
    <%= f.submit %>
  </div>
<% end %>