<div class="pet_form">

 <h2>質問一覧</h2>

  <div class="question_create btn btn-success">
   <%= link_to '質問を投稿する', new_question_path,class:'font_white hover_none' %>
    
  </div>
  <div class="index_border">
     <% @questions.each do |question| %>
       <div class="index_border">
        <p class="q_title"><%= link_to question.title ,question_path(question.id),class:'font_white hover_none'%></p>
        <p><%= link_to question.user.name,usershow_path(question.user_id) ,class:'font_white hover_none'%></p><br>
        </div> 
      <% end %>   


      
  
  





</div>